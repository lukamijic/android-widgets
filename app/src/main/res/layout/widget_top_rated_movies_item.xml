<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_item_height"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:id="@+id/widgetItem">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/colorAccent"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/small_margin"
            tools:text="Lord of the rings"/>

        <TextView
            android:id="@+id/releaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/small_margin"
            tools:text="Feb.3th 2019"/>

        <TextView
            android:id="@+id/averageVote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/small_margin"
            tools:text="7.5/10"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="@dimen/widget_poster_size"
        android:layout_height="@dimen/widget_poster_size"
        android:layout_gravity="center"
        android:src="@drawable/default_poster"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/normal_margin"/>

</LinearLayout>